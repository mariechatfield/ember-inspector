<div class="dropdown">
  <select class="dropdown__select" onchange={{action "selectIframe" value="target.value"}}>
    {{#each port.detectedApplications as |iframe|}}
      <option value={{iframe.value}}>{{iframe.name}}</option>
    {{/each}}
  </select>
  {{svg-jar "dropdown-arrow" class="dropdown__arrow"}}
</div>
